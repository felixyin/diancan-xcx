/* pages/createOrderMsg/createOrderMsg.wxss */
.order_list {
  padding: 30rpx 30rpx 0 30rpx;
  background: #fff;
  border-top: 1rpx #d9d9d9 solid;
  border-bottom: 1rpx #d9d9d9 solid;
}
.pay_order_address {
  position: relative;
}
.show_address_content {
  margin-top: 0;

}
.add_address_icon {
    font-size: 32rpx;
    background: #fff;
    padding: 20rpx 30rpx;
    border-bottom: 1px #d9d9d9 solid;
    border-top:  1px #d9d9d9 solid;
}
.add_address_icon image {
  width: 80rpx;
  height: 80rpx;
  vertical-align: middle;
  margin-right: 20rpx;
}
.cart_bottom {
  position: fixed;
  height: 100rpx;
  width: 100%;
  left: 0;
  bottom: 0;
  background: #474749;
  z-index: 9;
}
.cart_bottom_content {
  width: 100%;
  height: 100%;
  position: relative;
  padding: 0 200rpx 0 20rpx;
  box-sizing: border-box;
}
.cart_icon {
  width: 120rpx;
  height: 120rpx;
  position: absolute;
  box-sizing: border-box;
  border-radius: 200rpx;
  bottom: 5rpx;
  left: 20rpx;
  text-align: center;
  line-height: 120rpx;
  padding: 10rpx;
  background: #4e4e50;
  box-shadow: 0 -5rpx 10rpx 5rpx  rgba(71,71,73,.1);
}
.cart_icon_content {
  background: #0d9cff;
  width: 100%;
  height: 100%;
  border-radius: 200rpx;
}
.cart_icon_content.noshop {
  background: #474749;
}
.cart_number_icon {
  position: absolute;
  background: #ff461d;
  padding: 8rpx 12rpx;
  color: #fff;
  font-size: 24rpx;
  line-height: 1;
  top: 0;
  right: 10rpx;
  border-radius: 100px;
}
.cart_icon image {
  width: 70rpx;
  height: 70rpx;
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%,-50%);
}
.cart_bottom_right {
  width: 200rpx;
  height: 100%;
  text-align: center;
  background: #38ca73;
  color: #fff;
  font-size: 36rpx;
  top: 0;
  right: 0;
  position: absolute;
  line-height: 100rpx;
}
.cart_bottom_right.noshop {
  background: #686868;
  font-size: 28rpx;
  color: #999;
}
.cart_total_price {
  height: 100%;
  color: #fff;
  display: flex;
  align-items: center;
}
.cart_total_price .one {
  display: block;
  line-height: 1;
  font-size: 36rpx;
}
.cart_total_price .two {
  display: block;
  font-size: 22rpx;
  line-height: 1;
}
.cart_total_price .noshop {
  font-size: 28rpx;
  color: #999;
}
.cart_total_price_content {
  line-height: 1;
}
picker .weui-cell__ft_in-access {
  display: block;
  width: 200px;
}
.overHidden {
  overflow: hidden;
  width: 200px;
  white-space: nowrap;
  text-overflow: ellipsis;
}
.payMethod {
  background: #fff;
  padding: 30rpx;
  border-bottom: 1px #d9d9d9 solid;
}
.payMethod_top {
  font-size: 32rpx;
}
.payMethod_top .title {
  display: flex;
  line-height: 50rpx;
}
.payMethod_top .title image {
  width: 50rpx;
  height: 50rpx;
  vertical-align: middle;
  margin-right: 10rpx;
}
.payMethod_bottom{
  margin-top: 20rpx;
  display: flex;
  /* justify-content: space-between; */
  padding-right: 100rpx;

}
.payMethod_item{
  border:1px #ddd solid;
  border-radius: 8rpx;
  flex-grow: 1;
  margin-right: 20rpx;
  text-align: center;
  font-size: 30rpx;
  padding: 15rpx 0;
  max-width: 200rpx;
}
.payMethod_item:last-child {
  margin-right: 0;
}
.payMethod_item.cur {
  border: 1px #0097fe solid;
  color: #0097fe;
}
.payMethod_item.cur {
  border: 1px #0097fe solid;
  color: #0097fe;
}
.text_right {
  text-align: right;
  color: #999;
}
.price_new_item {
  line-height: 1;
  font-size: 32rpx;
  display: flex;
  align-items: center;
}
.price_new_item .tip {
  font-size: 24rpx;
}
.disable {
  background: #666;
  color: #999;
}


