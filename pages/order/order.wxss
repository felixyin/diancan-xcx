/* pages/order/order.wxss */
page {
  background: #fff;
}
.page_header {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
}
.brand_content {
  position: fixed;
  width: 78%;
  top: 71px;
  bottom: 100rpx;
  right: 0;
}
.brand_left {
  position: fixed;
  left: 0;
  top: 71px;
  bottom: 100rpx;
  width: 22%;
  background: #eee;
}
.brand_left scroll-view ,
.brand_content scroll-view 
{
  height: 100%;
  width: 100%;
}
.brand_left_item {
  text-align: center;
  border-bottom: 1px #e4e4e4 solid;
  padding: 20rpx 0;
  font-size: 30rpx;
}
.brand_left_item.cur{
  background: #fff;
  color: #ff6000;
}
.product_list {
  padding: 20rpx;
}
.product_list_item image {
  width: 120rpx;
  height: 120rpx;
}
.product_list_item_content .title {
  color: #222;
  display: flex;
  justify-content: space-between;
  align-items: center;
  line-height: 1.6;
}
.product_list_item_content .title .title_content {
  width: 60%;
  flex-shrink: 0;
  overflow: hidden;
  text-overflow: ellipsis;
}
.product_list_item_content .title .hot,
.product_list_item_content .title .top
{
  border: 1px #ff1800 solid;
  font-size: 20rpx;
  border-radius: 100px;
  padding: 4rpx 10rpx;
  color: #ff1800;
  line-height: 1;
}
.product_list_item_content .title .top {
  color: #ffae00;
  border-color: #ffae00;
  margin-right: 5rpx;
}
.product_list_item_content .remark {
  font-size: 24rpx;
  line-height: 1.2em;
}
.product_list_item::after {
  left: 140rpx;
}
.cart_bottom {
  position: fixed;
  height: 100rpx;
  width: 100%;
  left: 0;
  bottom: 0;
  background: #474749;
  z-index: 9;

}

.cart_bottom_content {
  width: 100%;
  height: 100%;
  position: relative;
  padding: 0 200rpx 0 150rpx;
  box-sizing: border-box;
}
.cart_icon {
  width: 120rpx;
  height: 120rpx;
  position: absolute;
  box-sizing: border-box;
  border-radius: 200rpx;
  bottom: 5rpx;
  left: 20rpx;
  text-align: center;
  line-height: 120rpx;
  padding: 10rpx;
  background: #4e4e50;
  box-shadow: 0 -5rpx 10rpx 5rpx  rgba(71,71,73,.1);
}
.cart_icon_content {
  background: #0d9cff;
  width: 100%;
  height: 100%;
  border-radius: 200rpx;
}
.cart_icon_content.noshop {
  background: #474749;
}
.cart_number_icon {
  position: absolute;
  background: #ff461d;
  padding: 8rpx 12rpx;
  color: #fff;
  font-size: 24rpx;
  line-height: 1;
  top: 0;
  right: 10rpx;
  border-radius: 100px;
}
.cart_icon image {
  width: 70rpx;
  height: 70rpx;
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%,-50%);
}
.cart_bottom_right {
  width: 200rpx;
  height: 100%;
  text-align: center;
  background: #38ca73;
  color: #fff;
  font-size: 36rpx;
  top: 0;
  right: 0;
  position: absolute;
  line-height: 100rpx;
}
.cart_bottom_right.noshop {
  background: #686868;
  font-size: 28rpx;
  color: #999;
}
.cart_total_price {
  height: 100%;
  color: #fff;
  display: flex;
  align-items: center;
}
.cart_total_price .one {
  display: block;
  line-height: 1;
  font-size: 40rpx;
}
.cart_total_price .two {
  display: block;
  font-size: 22rpx;
  line-height: 1;
}
.cart_total_price .noshop {
  font-size: 28rpx;
  color: #999;
}
.dishes_title {
  background: #f6f6f6;
  font-size: 28rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.dishes_title text,
.dishes_title picker
{
  padding: 16rpx 20rpx;
}
.dishes_title .picker {
  color: #0d9cff;
}
.popup_list_title {
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.title_tip {
  font-size: 24rpx;
  color: #ff6000;
}
.price_new_item {
  line-height: 1;
  font-size: 32rpx;
  display: flex;
  align-items: center;
}
.price_new_item .tip {
  font-size: 24rpx;
}
.popup_foot_left_wrap {
  line-height: 1;
}
.header_inform  {
  height: 70px;
}

