/* pages/address/address.wxss */
.choose_area_map_content {
  display: flex;
  justify-content: space-between;
}
.choose_area_map {
  width: 50px;
  flex-shrink: 0;
  position: relative;
}
.choose_area_map button {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  opacity: 0;
}
.choose_area_map image {
  width: 60rpx;
  height: 60rpx;
  position: absolute;
  transform: translate(-50%,-50%);
  top: 50%;
  left: 50%;
}
.product_item_content {
  position: relative;
}
.product_hot {
  position:absolute;
  top:0;
  right:0;
  font-size:18rpx;
  color:#fff;
  line-height:1;
  padding:6rpx 10rpx;
  background:#f00;
  font-weight: bold;
}

