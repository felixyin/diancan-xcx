.shop_desc_body {
  display: flex;
  justify-content: space-between;
  margin-top: 20rpx;
}
.shop_desc_body .right {
  display: flex;
  align-items: center;
  flex-shrink: 0;
  margin-left: 30rpx;
}
.shop_desc_body_item {
  font-size: 22rpx;
  color: #222;
  text-align: center;
  margin-left: 30rpx;
}
.shop_desc_body .img {
  width: 40rpx;
  height: 40rpx;
}
.shop_desc_body .text {
  margin-top: 5rpx;
  line-height: 1;
}
.mr10 {
  margin-right: 20rpx;
}

.index_middle_btn {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-top: 40rpx;
}
.index_middle_btn_item {
  border: 1px #eee solid;
  padding: 20rpx;
  border-radius: 10rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 20rpx;
  width: 100%;
  font-size: 28rpx;
  line-height: 1;
  position: relative;
}
.index_middle_btn_item .number {
  position: absolute;
  background: #f44;
  font-size: 22rpx;
  line-height: 1;
  top: -20rpx;
  left: 50%;
